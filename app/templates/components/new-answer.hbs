      <form>
        <div class="form-group">
          <label for="author">author</label>
          {{input value=author id="author"}}
        </div>
        <div class="form-group">
          <label for="content">answer</label>
          {{textarea input value=content id="content"}}
        </div>
      <div class="tile">
        <a href="index"  {{action 'saveAnswer'}}>add <br> Answer</a>
      </div>
      </form>
  </div>
